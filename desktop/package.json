{
  "name": "smartpaste-desktop",
  "version": "1.0.0",
  "description": "SmartPaste Desktop Application - Intelligent clipboard assistant",
  "main": "src/simple-main.js",
  "homepage": "https://abdhajjar.github.io/SmartPaste",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AbdHajjar/SmartPaste.git",
    "directory": "desktop"
  },
  "author": "SmartPaste Team <contact@smartpaste.ai>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "electron src/main.js",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "npm run build",
    "start": "electron .",
    "test": "jest",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "build": {
    "appId": "ai.smartpaste.desktop",
    "productName": "SmartPaste",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "!**/*.map"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "AbdHajjar",
      "repo": "SmartPaste"
    }
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "clipboardy": "^3.0.0",
    "electron-store": "^8.1.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "7zip-bin": "^5.2.0",
    "electron": "28.0.0",
    "electron-builder": "^24.6.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0"
  },
  "keywords": [
    "clipboard",
    "desktop-app",
    "electron",
    "productivity",
    "ai-assistant",
    "content-analysis"
  ],
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/AbdHajjar/SmartPaste/issues"
  }
}
